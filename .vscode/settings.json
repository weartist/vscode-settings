{
  // common
  // 辅助模式
  "editor.accessibilitySupport": "off",
  "editor.suggestSelection": "recentlyUsed",
  "editor.stickyScroll.enabled": true,
  "editor.minimap.enabled": false,
  "editor.guides.bracketPairs": "active",
  "editor.cursorSurroundingLines": 5,
  "files.autoSaveDelay": 3000,
  "files.eol": "\n",
  "files.simpleDialog.enable": true,
  "files.insertFinalNewline": true,
  "files.associations": {
    "*.json": "jsonc"
  },
  // 直接打开工作区之外的文件
  "security.workspace.trust.untrustedFiles": "prompt",
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.tabCloseButton": "left",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 8,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/dist/**": true,
    "**/out/**": true,
    "**/.output": true,
    "**/.git": true,
    "**/yarn.lock": true,
    "**/.pnpm": true,
    "**/pnpm-lock.yaml": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/logs": true,
    "**/tmp": true,
    "**/package-lock.json": true,
  },


  // 删除时候是否二次确认
  "explorer.confirmDelete": false,
  // 拖拽文件是否二次确认
  "explorer.confirmDragAndDrop": false,


  // git
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.untrackedChanges": "separate",

  // terminal
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.fontWeightBold": "bold",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.profiles.osx": {
    "bash": {
      "path": "bash",
      "args": [
        "-l"
      ],
      "icon": "terminal-bash"
    },
    "zsh": {
      "path": "zsh",
      "args": [
        "-l"
      ]
    },
    "fish": {
      "path": "fish",
      "args": [
        "-l"
      ]
    },
    "tmux": {
      "path": "tmux",
      "icon": "terminal-tmux"
    },
    "pwsh": {
      "path": "pwsh",
      "icon": "terminal-powershell"
    },
    "nu": {
      "path": "/opt/homebrew/bin/nu"
    }
  },

  // UI相关
  "window.zoomLevel": 1,
  "editor.cursorSmoothCaretAnimation": "off",
  "editor.find.addExtraSpaceOnTop": false,
  // 是否启用字体连字
  "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss06', 'zero'",
  "editor.tabSize": 2,
  "editor.fontWeight": 440,
  "editor.fontFamily": "Fira Code",
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.inlineSuggest.enabled": true,
  "editor.lineNumbers": "interval",
  "editor.renderWhitespace": "all",
  "window.dialogStyle": "custom",
  "workbench.colorTheme": "Vitesse Light Soft",
  // 控制渲染字体的方式，auto为判断是否是高dpi屏来决定如何渲染
  "workbench.fontAliasing": "auto",
  "workbench.list.smoothScrolling": false,
  "workbench.sideBar.location": "left",

  // volume
  "audioCues.volume": 0,
  
  // debug
  "debug.onTaskErrors": "debugAnyway",
  "debug.console.fontFamily": "Fira Code",
  "debug.allowBreakpointsEverywhere": true,

  // extensions
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "extensions.ignoreRecommendations": true,
  "vsicons.dontShowNewVersionMessage": true,

  // eslint
  "eslint.quiet": true,
  // ESLint要验证的语言
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "css",
    "scss",
    "less",
    "json",
    "markdown",
    "mpx"
  ],
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },

  // eslint with editor
  "editor.codeActionsOnSave": {
    "source.fixAll": false,
    "source.fixAll.eslint": true,
    "source.organizeImports": false
  },

  // spell check
  "cSpell.allowCompoundWords": true,
  "cSpell.language": "en,en-US",
  "cSpell.userWords": [
    "apng",
    "appkit",
    "autofetch",
    "Autosize",
    "bincode",
    "Codicon",
    "Colorspace",
    "contextkey",
    "cwds",
    "deadcode",
    "easyocr",
    "entitie",
    "Fastar",
    "fastify",
    "Fira",
    "fitz",
    "fontfile",
    "fontname",
    "fontsize",
    "freecodecamp",
    "fullscreen",
    "icns",
    "keydown",
    "KHTML",
    "nestjs",
    "objc",
    "OPENAI",
    "pdfplumber",
    "pixmap",
    "proptest",
    "quickcheck",
    "reqwest",
    "Tauri",
    "typeorm",
    "unlisten",
    "unmaximize",
    "unminimize",
    "UPTODATE",
    "VSIX"
  ],

  // copilot
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": true,
    "rust": true,
    "typescript": true,
    "python": true
  },

  // 文件树折叠功能，参考：https://github.com/antfu/vscode-file-nesting-config
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.asax": "$(capture).*.cs, $(capture).*.vb",
    "*.ascx": "$(capture).*.cs, $(capture).*.vb",
    "*.ashx": "$(capture).*.cs, $(capture).*.vb",
    "*.aspx": "$(capture).*.cs, $(capture).*.vb",
    "*.bloc.dart": "$(capture).event.dart, $(capture).state.dart",
    "*.c": "$(capture).h",
    "*.cc": "$(capture).hpp, $(capture).h, $(capture).hxx",
    "*.component.ts": "$(capture).component.html, $(capture).component.spec.ts, $(capture).component.css, $(capture).component.scss, $(capture).component.sass, $(capture).component.less",
    "*.cpp": "$(capture).hpp, $(capture).h, $(capture).hxx",
    "*.cshtml": "$(capture).cshtml.cs",
    "*.csproj": "*.config, *proj.user, appsettings.*, bundleconfig.json",
    "*.css": "$(capture).css.map, $(capture).*.css",
    "*.cxx": "$(capture).hpp, $(capture).h, $(capture).hxx",
    "*.dart": "$(capture).freezed.dart, $(capture).g.dart",
    "*.ex": "$(capture).html.eex, $(capture).html.heex, $(capture).html.leex",
    "*.java": "$(capture).class",
    "*.js": "$(capture).js.map, $(capture).*.js, $(capture)_*.js",
    "*.jsx": "$(capture).js, $(capture).*.jsx, $(capture)_*.js, $(capture)_*.jsx",
    "*.master": "$(capture).*.cs, $(capture).*.vb",
    "*.module.ts": "$(capture).resolver.ts, $(capture).controller.ts, $(capture).service.ts",
    "*.pubxml": "$(capture).pubxml.user",
    "*.resx": "$(capture).*.resx, $(capture).designer.cs, $(capture).designer.vb",
    "*.tex": "$(capture).acn, $(capture).acr, $(capture).alg, $(capture).aux, $(capture).bbl, $(capture).blg, $(capture).fdb_latexmk, $(capture).fls, $(capture).glg, $(capture).glo, $(capture).gls, $(capture).idx, $(capture).ind, $(capture).ist, $(capture).lof, $(capture).log, $(capture).lot, $(capture).out, $(capture).pdf, $(capture).synctex.gz, $(capture).toc, $(capture).xdv",
    "*.ts": "$(capture).js, $(capture).*.ts, $(capture)_*.js, $(capture)_*.ts",
    "*.tsx": "$(capture).ts, $(capture).*.tsx, $(capture)_*.ts, $(capture)_*.tsx",
    "*.vbproj": "*.config, *proj.user, appsettings.*, bundleconfig.json",
    "*.vue": "$(capture).*.ts, $(capture).*.js",
    "*.xaml": "$(capture).xaml.cs",
    ".clang-tidy": ".clang-format, .clangd, compile_commands.json",
